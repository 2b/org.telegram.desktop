{
    "id": "org.telegram.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "telegram-desktop",
    "rename-desktop-file": "telegramdesktop.desktop",
    "rename-appdata-file": "telegramdesktop.appdata.xml",
    "rename-icon": "telegram-desktop",
    "finish-args": [ "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--socket=pulseaudio",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications",
                     "--talk-name=com.canonical.Unity",
                     "--talk-name=org.freedesktop.portal.Fcitx",
                     "--filesystem=xdg-download",
                     "--device=dri" ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "version": "19.08",
            "autodownload": true,
            "autodelete": false
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [ "/cache",
                 "/man",
                 "/share/man",
                 "/lib/systemd",
                 "/include",
                 "/lib/pkgconfig",
                 "/lib/cmake",
                 "*.la", "*.a"],
    "modules": [
        "shared-modules/dbus-glib/dbus-glib-0.110.json",
        "shared-modules/libappindicator/libappindicator-gtk3-12.10.json",
        {
            "name": "dee",
            "config-opts": ["--enable-maintainer-flags=no"],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://launchpad.net/dee/1.0/1.2.7/+download/dee-1.2.7.tar.gz",
                    "sha256": "1bf0336ce684aa0f48d6eae2469628c1a9b43695a77443bc31a5790aa673bf8a"
                }
            ]
        },
        {
            "name": "libnotify",
            "cleanup": [ "/bin" ],
            "config-opts": [
                "--disable-static",
                "--disable-tests",
                "--disable-introspection"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/libnotify/0.7/libnotify-0.7.7.tar.xz",
                    "sha256": "9cb4ce315b2655860c524d46b56010874214ec27e854086c1a1d0260137efc04"
                }
            ]
        },
        {
            "name": "cmake",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Kitware/CMake/releases/download/v3.16.2/cmake-3.16.2.tar.gz",
                    "sha256": "8c09786ec60ca2be354c29829072c38113de9184f29928eb9da8446a5f2ce6a9"
                }
            ],
            "cleanup": [ "*" ]
        },
        {
            "name": "range-3",
            "buildsystem": "cmake",
            "build-options": {
                "cflags": "-Wno-error"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ericniebler/range-v3/archive/0.9.1.tar.gz",
                    "sha256": "2b5b442d572b5978ea51c650adfaf0796f39f326404d09b83d846e04f571876b"
                },
                {
                    "type": "patch",
                    "path": "patch/ranges-v3-disable-tests-doc-examples.patch"
                }
            ]
        },
        {
            "name": "enchant",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/AbiWord/enchant/releases/download/v2.2.7/enchant-2.2.7.tar.gz",
                    "sha256": "1b22976135812b35cb5b8d21a53ad11d5e7c1426c93f51e7a314a2a42cab3a09"
                }
            ]
        },
        {
            "name": "lz4",
            "no-autogen": true,
            "make-args": [
                "PREFIX=$(FLATPAK_DEST)"
            ],
            "make-install-args": [
                "PREFIX=$(FLATPAK_DEST)"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lz4/lz4/archive/v1.9.2.tar.gz",
                    "sha256": "658ba6191fa44c92280d4aa2c271b0f4fbc0e34d249578dd05e50e76d0e5efcc"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "xxHash",
            "no-autogen": true,
            "make-args": [
                "prefix=$(FLATPAK_DEST)"
            ],
            "make-install-args": [
                "prefix=$(FLATPAK_DEST)"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Cyan4973/xxHash/archive/v0.7.2.tar.gz",
                    "sha256": "7e93d28e81c3e95ff07674a400001d0cdf23b7842d49b211e5582d00d8e3ac3e"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "minizip",
            "subdir": "contrib/minizip",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://zlib.net/zlib-1.2.11.tar.gz",
                    "md5": "1c9f62f0778697a09d36121ead88e08e"
                },
                {
                    "type": "script",
                    "dest-filename": "contrib/minizip/autogen.sh",
                    "commands": [
                        "autoreconf -ifv"
                    ]
                }
            ]
        },
        {
            "name": "telegram-desktop",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "build-options": {
                "cxxflags": "-std=gnu++17",
                "ldflags": "-Wl,--no-keep-memory -Wl,--reduce-memory-overheads"
            },
            "config-opts": [
                "-DDESKTOP_APP_USE_PACKAGED:BOOL=ON",
                "-DTDESKTOP_DISABLE_AUTOUPDATE:BOOL=ON",
                "-DTDESKTOP_DISABLE_REGISTER_CUSTOM_SCHEME:BOOL=ON",
                "-DTDESKTOP_DISABLE_DESKTOP_FILE_GENERATION:BOOL=ON",
                "-DDESKTOP_APP_DISABLE_CRASH_REPORTS:BOOL=ON",
                "-DTDESKTOP_USE_PACKAGED_TGVOIP:BOOL=OFF",
                "-DDESKTOP_APP_USE_PACKAGED_RLOTTIE:BOOL=OFF",
                "-DTDESKTOP_API_ID=611335",
                "-DTDESKTOP_API_HASH=d524b414d21f4d37f08684c1df41ac9c"
            ],
            "no-make-install": true,
            "post-install": [
                "strip -s bin/Telegram",

                "install -dm755 /app/bin",
                "install -m755 bin/Telegram /app/bin/Telegram",
                "install -m755 ../telegram-desktop /app/bin/telegram-desktop",

                "install -d /app/share/applications",
                "install -m644 ../lib/xdg/telegramdesktop.desktop /app/share/applications/telegramdesktop.desktop",

                "install -d /app/share/appdata",
                "install -m644 ../lib/xdg/telegramdesktop.appdata.xml /app/share/appdata/telegramdesktop.appdata.xml",

                "install -d /app/share/kservices5",
                "install -m644 ../lib/xdg/tg.protocol /app/share/kservices5/tg.protocol",

                "for icon_size in 16 32 48 64 128 256 512; do install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps; install -m644 ../Telegram/Resources/art/icon${icon_size}.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/telegram-desktop.png; done"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/telegramdesktop/tdesktop.git",
                    "commit": "f1b0e81b606f304259ab22e2735758e9fdb69ce4"
                },
                {
                    "type": "patch",
                    "path": "patch/telegram-single-instance.patch"
                },
                {
                    "type": "patch",
                    "path": "patch/telegram-cache-dir-for-downloads.patch"
                },
                {
                    "type": "patch",
                    "path": "patch/telegram-appdata.patch"
                },
                {
                    "type": "patch",
                    "dest": "cmake",
                    "path": "patch/cmake_helpers-204c3fec.patch",
                    "options": [ "-R" ]
                },
                {
                    "type": "script",
                    "dest-filename": "telegram-desktop",
                    "commands": [
                        "exec env TMPDIR=$XDG_CACHE_HOME /app/bin/Telegram \"$@\""
                    ]
                }
            ]
        }
    ]
}
